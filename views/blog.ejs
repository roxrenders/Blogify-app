<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3 text-center" >
        <h1 class="rounded mt-3"><%= blog.title %></h1>
        <img class=" mt-3" src="<%= blog.coverImageURL %>" width="500px" />
        <p class=" mt-3"><%= blog.body %></p>
    </div>

    <div class="container mt-4 d-flex  p-2" >
        <div>
        <img src="<%= blog.createdBy.profileImageURL %>" width="100px"> 
    </div>
        <div class=" mt-3 ms-4">
       <h2 ><%=  blog.createdBy.fullName %></h2>
    </div>
    </div>
    

    <div class="container mt-3" >
        <h3>comments (<%= comments.length %>)</h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                   <input name="content" type="text" class="form-control" placeholder="Enter your comment"/>
                 </div>
                 <div>
                   <button type="submit" class="btn btn-primary mb-3">Submit</button>
               </form >
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div class="d-flex">
                    <img src="<%= comment.createdBy.profileImageURL %>" width="80px" />
                    <h3 class="ms-3 mt-3"><%= comment.createdBy.fullName %></h3>
                </div>
                <div class=" shadow-sm p-3 my-3 bg-body-tertiary rounded border"> 
                    <pre ><h5><%= comment.content %></h5></pre>
                </div>
            <% }) %>
           </div>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>
